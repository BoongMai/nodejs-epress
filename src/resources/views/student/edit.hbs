<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form class="mt-4" method="POST" action="/student/{{student._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{student.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="info">Thông tin</label>
            <textarea class="form-control" id="description" name="info">{{student.info}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">avatar</label>
            <input type="text" class="form-control" value="{{student.avatar}}" id="videoId" name="avatar">
        </div>
        <div class="form-group">
            <label for="level">Học vấn</label>
            <input type="text" class="form-control" value="{{student.level}}" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>